  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "npm",
      "windows": {
        "runtimeExecutable": "npm.cmd"
      },
      "runtimeArgs": [
        "run-script",
        "debug-test"
      ],
      "timeout": 50000,
      "port": 33295,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/dist/**/*.js"
      ],
      "env": {
        "NODE_ENV": "test"
      }
    }
  ]
}